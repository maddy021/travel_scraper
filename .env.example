# ===== Server =====
PORT=3000

# ===== Qdrant =====
# Local Docker: http://localhost:6333
# Qdrant Cloud: https://your-cluster.qdrant.io
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=           # Leave empty for local; required for Qdrant Cloud
QDRANT_COLLECTION=places_reviews

# ===== OpenAI (embeddings) =====
OPENAI_API_KEY=sk-...

# ===== Reddit =====
# Create an app at: https://www.reddit.com/prefs/apps (type: "script")
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=PlacesReviewScraper/1.0

# ===== Google Places API =====
# Enable "Places API" in Google Cloud Console
GOOGLE_PLACES_API_KEY=AIza...

# ===== X / Twitter API v2 =====
# Get from: https://developer.twitter.com/en/portal/dashboard
# Free tier: 500k tweets/month, recent search (last 7 days)
X_BEARER_TOKEN=AAAA...

# ===== Limits =====
MAX_RECORDS_TOTAL=5000
GOOGLE_MAX_PER_PLACE=50
